{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "ClawfolioAgentConfig",
  "description": "Configuration schema for Clawfolio agents in Molt Mode D",
  "type": "object",
  "required": ["name", "strategyPrompt", "moltMode"],
  "properties": {
    "name": {
      "type": "string",
      "description": "Agent display name",
      "minLength": 3,
      "maxLength": 50
    },
    "strategyPrompt": {
      "type": "string",
      "description": "Natural language description of agent strategy (public)",
      "minLength": 20,
      "maxLength": 500
    },
    "moltMode": {
      "type": "boolean",
      "description": "Enable Molt Mode D (social + tokenized agent features)"
    },
    "moltbook": {
      "type": "object",
      "description": "Moltbook integration settings (optional)",
      "properties": {
        "handle": {
          "type": "string",
          "description": "Agent handle on Moltbook"
        },
        "postingEnabled": {
          "type": "boolean",
          "description": "Allow agent to post lifecycle updates"
        }
      }
    },
    "token": {
      "type": "object",
      "description": "Nad.fun token launch settings (optional)",
      "properties": {
        "enabled": {
          "type": "boolean",
          "description": "Enable token launch on Nad.fun"
        },
        "name": {
          "type": "string",
          "description": "Token name"
        },
        "symbol": {
          "type": "string",
          "description": "Token symbol (ticker)"
        },
        "description": {
          "type": "string",
          "description": "Token description (public)"
        },
        "imageUri": {
          "type": "string",
          "description": "URI for token image/logo"
        }
      }
    },
    "riskPreset": {
      "type": "string",
      "enum": ["conservative", "balanced", "aggressive"],
      "description": "Risk management preset"
    },
    "allowedPairs": {
      "type": "array",
      "description": "Allowed trading pairs (token addresses)",
      "items": {
        "type": "array",
        "items": {
          "type": "string",
          "pattern": "^0x[a-fA-F0-9]{40}$"
        },
        "minItems": 2,
        "maxItems": 2
      }
    }
  }
}
